{
  "name": "prompt-assistant",
  "displayName": "Prompt Engineering Assistant",
  "description": "Automatically suggests prompts following best practices and provides access to prompt engineering guide",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
    "activationEvents": [
    "onCommand:promptAssistant.suggestPrompt",
    "onCommand:promptAssistant.showGuide",
    "onCommand:promptAssistant.analyzePrompt",
    "onCommand:promptAssistant.insertTemplate",
    "onCommand:promptAssistant.improveClipboard",
    "onCommand:promptAssistant.getMLRecommendations"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptAssistant.suggestPrompt",
        "title": "Suggest Improved Prompt",
        "category": "Prompt Assistant",
        "icon": {
          "light": "resources/light/suggest.svg",
          "dark": "resources/dark/suggest.svg"
        }
      },
      {
        "command": "promptAssistant.analyzePrompt",
        "title": "Analyze Current Prompt",
        "category": "Prompt Assistant"
      },
      {
        "command": "promptAssistant.showGuide",
        "title": "Show Prompt Engineering Guide",
        "category": "Prompt Assistant"
      },
      {
        "command": "promptAssistant.insertTemplate",
        "title": "Insert Prompt Template",
        "category": "Prompt Assistant"
      },
      {
        "command": "promptAssistant.improveClipboard",
        "title": "Improve Prompt from Clipboard",
        "category": "Prompt Assistant",
        "icon": {
          "light": "resources/light/clipboard.svg",
          "dark": "resources/dark/clipboard.svg"
        }
      },
      {
        "command": "promptAssistant.getMLRecommendations",
        "title": "Get ML-Powered Recommendations",
        "category": "Prompt Assistant",
        "icon": {
          "light": "resources/light/ml.svg",
          "dark": "resources/dark/ml.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "promptAssistant.suggestPrompt",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus"
      },
      {
        "command": "promptAssistant.analyzePrompt",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "promptAssistant.improveClipboard",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "promptAssistant.getMLRecommendations",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "promptAssistant.suggestPrompt",
          "when": "editorHasSelection",
          "group": "promptAssistant"
        },
        {
          "command": "promptAssistant.analyzePrompt",
          "when": "editorHasSelection",
          "group": "promptAssistant"
        }
      ]
    },
    "configuration": {
      "title": "Prompt Assistant",
      "properties": {
        "promptAssistant.autoSuggest": {
          "type": "boolean",
          "default": false,
          "description": "Automatically suggest prompt improvements when typing"
        },
        "promptAssistant.preferredFramework": {
          "type": "string",
          "enum": [
            "RCTF",
            "STAR",
            "Chain-of-Thought",
            "auto"
          ],
          "default": "auto",
          "description": "Preferred prompt framework to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {}
}

